<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="tomee-webapp-sample"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <fileSets>
  
  	<!-- Fichiers source d'exemple -->
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    
    <!-- Fichiers de configuration, tels que persistence.xml -->
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    
    <!-- index.html -->
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/webapp</directory>
      <includes>
        <include>**/*.html</include>
      </includes>
    </fileSet>
    
    <!-- Exemples de tests unitaires -->
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    
    <!-- Scripts Docker -->
    <fileSet filtered="true" encoding="UTF-8">
      <directory>docker/DEV</directory>
      <includes>
        <include>**/*.xml</include>
        <include>**/Dockerfile</include>
        <include>**/*.sh</include>
      </includes>
    </fileSet>
    
    <fileSet filtered="false" encoding="UTF-8">
    	<directory>docker/DEV</directory>
    	<includes>
    		<include>**/*.jar</include>
    		<include>**/*.sql</include>
    	</includes>
    </fileSet>

	<!-- Fichiers ignorÃ©s par Git -->
    <fileSet filtered="false" encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>.gitignore</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
